<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parchment">

    <ImageView
        android:id="@+id/staff"
        android:layout_width="match_parent"
        android:layout_height="296dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019"
        app:srcCompat="@drawable/staff" />

    <ImageView
        android:id="@+id/F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/staff"
        app:layout_constraintEnd_toEndOf="@+id/staff"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/staff"
        app:layout_constraintTop_toTopOf="@+id/staff"
        app:layout_constraintVertical_bias="0.261"
        app:srcCompat="@drawable/backwards_note" />

    <ImageView
        android:id="@+id/E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/staff"
        app:layout_constraintEnd_toEndOf="@+id/staff"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/staff"
        app:layout_constraintTop_toTopOf="@+id/staff"
        app:layout_constraintVertical_bias="0.316"
        app:srcCompat="@drawable/backwards_note" />

    <ImageView
        android:id="@+id/D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/staff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/staff"
        app:layout_constraintTop_toTopOf="@+id/staff"
        app:layout_constraintVertical_bias="0.411"
        app:srcCompat="@drawable/backwards_note" />

    <ImageView
        android:id="@+id/C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="@+id/staff"
        app:layout_constraintEnd_toEndOf="@+id/staff"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/staff"
        app:layout_constraintTop_toTopOf="@+id/staff"
        app:layout_constraintVertical_bias="0.516"
        app:srcCompat="@drawable/backwards_note" />

    <ImageView
        android:id="@+id/B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="@+id/staff"
        app:layout_constraintEnd_toEndOf="@+id/staff"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/staff"
        app:layout_constraintTop_toTopOf="@+id/staff"
        app:layout_constraintVertical_bias="0.261"
        app:srcCompat="@drawable/quarter_note" />

    <ImageView
        android:id="@+id/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="@+id/staff"
        app:layout_constraintEnd_toEndOf="@+id/staff"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/staff"
        app:layout_constraintTop_toTopOf="@+id/staff"
        app:layout_constraintVertical_bias="0.366"
        app:srcCompat="@drawable/quarter_note" />

    <ImageView
        android:id="@+id/G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="@+id/staff"
        app:layout_constraintEnd_toEndOf="@+id/staff"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/staff"
        app:layout_constraintTop_toTopOf="@+id/staff"
        app:layout_constraintVertical_bias="0.411"
        app:srcCompat="@drawable/quarter_note" />

    <TextView
        android:id="@+id/txtNote"
        android:layout_width="40dp"
        android:layout_height="118dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="200dp"
        android:fontFamily="casual"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="72sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.222" />

    <TextView
        android:id="@+id/txtFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:fontFamily="cursive"
        android:textSize="24sp" />

    <Button
        android:id="@+id/TempoInputButton"
        android:layout_width="113dp"
        android:layout_height="53dp"
        android:layout_below="@+id/WriteArrayButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="TEMPO"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="464dp" />

    <TextView
        android:id="@+id/tempo"
        android:layout_width="91dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Tempo"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="524dp" />
    android:id="@+id/TempoInput"
    android:layout_width="wrap_content"
    android:layout_height="38dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="555dp"
    android:layout_marginEnd="156dp"
    android:layout_marginBottom="138dp"
    android:text="Tempo" />

    <Button
        android:id="@+id/tempoStopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/StopRecording"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/TempoInputButton"
        android:text="@string/StopButtonText"
        tools:layout_editor_absoluteX="259dp"
        tools:layout_editor_absoluteY="476dp" />

    <Button
        android:id="@+id/WriteArrayButton"
        android:layout_width="173dp"
        android:layout_height="80dp"
        android:layout_below="@+id/txtNote"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="@string/writeArrayButtonText"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="359dp" />

    <Button
        android:id="@+id/StopRecording"
        android:layout_width="159dp"
        android:layout_height="63dp"
        android:layout_alignStart="@+id/WriteArrayButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="@string/stopWritingButtonText"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="359dp" />

    <TextView
        android:id="@+id/displayNotes"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="@string/displayNotesText"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="579dp" />

</android.support.constraint.ConstraintLayout>